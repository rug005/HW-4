---
import BlogPostCard from '../components/BlogPostCard.astro';

// Example blog posts array, which in a real project could come from Markdown files or an API.
const posts = [
  {
    title: "My First Astro Post",
    summary: "An introduction to my new static blog built with Astro.",
    url: "/posts/my-first-astro-post",
    date: "2025-02-25"
  },
  {
    title: "Exploring Astro Components",
    summary: "How reusable components can speed up development and rendering.",
    url: "/posts/exploring-astro-components",
    date: "2025-02-20"
  }
];
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Astro Blog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/global.css" />
</head>
<body>
  <header>
    <h1>Welcome to My Astro Blog</h1>
  </header>
  <main>
    {posts.map(post => (
      <BlogPostCard {...post} />
    ))}
  </main>
</body>
</html>
